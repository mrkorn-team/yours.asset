@model YOURS.Asset.Pages.SharedFiles.IndexModel

@if (Model.Entries.Any())
{
  <div class="table-responsive">
    <table class="table table-sm table-hover table-striped align-middle" id="resultsTable">
      <thead>
        <tr>
          <th scope="col" data-sort="name"><span class="sort-header">Name</span> <span class="sort-icon"><i class="bi bi-arrow-down-up"></i></span></th>
          <th scope="col" class="text-end" data-sort="size"><span class="sort-header">Size</span> <span class="sort-icon"><i class="bi bi-arrow-down-up"></i></span></th>
          <th scope="col" class="text-end" data-sort="date"><span class="sort-header">Modified</span> <span class="sort-icon"><i class="bi bi-arrow-down-up"></i></span></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var entry in Model.Entries)
        {
          <tr data-isdir="@entry.IsDir">
            <td data-name="@entry.Name">
              @if (entry.IsDir)
              {
                <a href="/shared?path=@entry.RelativePath" data-bs-toggle="tooltip" title="@entry.RelativePath" class="d-inline-flex align-items-center gap-1">
                  <i class="bi bi-folder-fill text-warning"></i>
                  <span>@entry.Name</span>
                </a>
              }
              else
              {
                <a href="/shared?path=@entry.RelativePath" data-bs-toggle="tooltip" title="@entry.RelativePath" class="d-inline-flex align-items-center gap-1">
                  <i class="bi bi-file-earmark text-secondary"></i>
                  <span>@entry.Name</span>
                </a>
              }
            </td>
            <td class="text-end" data-size="@entry.Size">@IndexModel.FormatSize(entry.Size)</td>
            <td class="text-end text-nowrap" data-date="@entry.Modified.Ticks">@entry.Modified.ToString("yyyy-MM-dd HH:mm")</td>
          </tr>
        }
      </tbody>
    </table>
  </div>
  <div id="sortStatus" class="small text-muted mt-1"></div>
}
else
{
  <div class="alert alert-secondary mb-0">
    <i class="bi bi-info-circle"></i> No entries found.
  </div>
}
